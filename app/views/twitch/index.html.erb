<div class="container" id="ember">
</div>
<script type="text/x-handlebars">
  <div class="row">
    <div class="twelve columns">
      <h1>Track all the Twitch!</h1>
      <div class="row">
        <div class="two columns">{{#link-to "index"}}List Users{{/link-to}}</div>
        <div class="two columns">{{#link-to "addUser"}}Add User{{/link-to}}</div>
      </div>
      <div class="row">
        {{outlet}}
      </div>
    </div>
  </div>
</script>
<script type="text/x-handlebars" data-template-name="addUser">
  <div class="three columns">
    <label for='user-add'>Enter a username to follow</label>
    <form>
      {{input id="user-add" enter="addUser" value=newUser}}
    </form>
  </div>
</script>
<script type="text/x-handlebars" data-template-name="index">
  <div class="nine columns">
    <div class="row">
      <div class="three columns">user</div>
      <div class="one columns">status</div>
      <div class="eight columns">other info</div>
    </div>
    {{#each model as |user|}}
      <div class="row" id="users">
        <div class="three columns">{{user.name}}</div>
        <div class="one columns">offline</div>
        <div class="eight columns">{{user.bio}}</div>
      </div>
    {{/each}}
  </div>
</script>
